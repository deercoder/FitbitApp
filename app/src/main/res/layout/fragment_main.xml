<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <Button
        android:id="@+id/MainFragment_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        />

    <Button
        android:id="@+id/MainFragment_get_user_info_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Info"
        android:enabled="false"
        />

    <Button
        android:id="@+id/MainFragment_get_activities_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activities"
        android:enabled="false"
        />

    <Button
        android:id="@+id/MainFragment_body_weight_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Body_weight"
        android:enabled="false"
        />

        <Button
            android:id="@+id/MainFragment_get_heart_rate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HeartRate"
            android:enabled="false"
            />
        <Button
            android:id="@+id/MainFragment_get_food_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food"
            android:enabled="false"
            />
        <Button
            android:id="@+id/MainFragment_get_sleep_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sleep"
            android:enabled="false"
            />
        <Button
            android:id="@+id/MainFragment_get_friends_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:enabled="false"
            />
        <Button
            android:id="@+id/MainFragment_get_devices_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Devices"
            android:enabled="false"
            />

    <TextView
        android:id="@+id/MainFragment_response_text_view"
        android:text="Response: " android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="20dp"/>

    </LinearLayout>
</ScrollView>